{
    "preset": "laravel",
    "rules": {
        "declare_strict_types": true,
        "not_operator_with_successor_space": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "array_syntax": {
            "syntax": "short"
        },
        "blank_line_before_statement": {
            "statements": ["return", "throw", "try"]
        }
    },
    "exclude": [
        "storage",
        "bootstrap/cache"
    ]
}
